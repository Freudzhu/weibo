<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper 
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd"> 
<mapper namespace="com.zhuhaihuan.weibo.mybatis.mapper.weibo.message">
	<insert id="add" parameterType="Message" 
        useGeneratedKeys="true" keyProperty="mid"> 
        INSERT INTO message(content,creatime,updatetime,uid,fowarduid,fowardcontent,fowardcreatetime,fowardupdatetime,fowardforwardcount) 
        VALUES(#{content},#{createtime},#{updatetime},#{user.uid},#{forward.user.uid},#{forward.content},#{forward.createtime},#{forward.updatetime},#{forward.forwardCount}) 
 	</insert> 
</mapper>